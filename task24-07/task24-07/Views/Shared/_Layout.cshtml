                        {
                            <li>@Html.ActionLink("logout", "Index", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                        }
                        else
                          {
                            <li>@Html.ActionLink("logIn", "logIn", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                          }
                       
                    </ul>
</form>
            </div>
        </div>
